@model LigaTaller.Models.Equipo

@{
    ViewData["Title"] = "Create Equipo";
}

<h1 class="text-primary text-center mb-4">Crear Nuevo Equipo</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="shadow p-4 bg-light rounded">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="form-group">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del equipo" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ciudad" class="form-label"></label>
                <input asp-for="Ciudad" class="form-control" placeholder="Ingrese la ciudad" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Titulos" class="form-label"></label>
                <input asp-for="Titulos" class="form-control" placeholder="Ingrese el número de títulos" />
                <span asp-validation-for="Titulos" class="text-danger"></span>
            </div>

            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AceptaExtranjeros" /> ¿Acepta Extranjeros?
                </label>
            </div>

            <div class="d-grid gap-2 mt-3">
                <input type="submit" value="Crear Equipo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

