@model LigaTaller.Models.Equipo

@{
    ViewData["Title"] = "Detalles del Equipo";
}

<h1 class="text-primary text-center mb-4">Detalles del Equipo</h1>

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="card-title">@Model.Nombre</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ciudad</dt>
            <dd class="col-sm-9">@Model.Ciudad</dd>

            <dt class="col-sm-3">Títulos</dt>
            <dd class="col-sm-9">@Model.Titulos</dd>

            <dt class="col-sm-3">¿Acepta Extranjeros?</dt>
            <dd class="col-sm-9">@Model.AceptaExtranjeros</dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>

